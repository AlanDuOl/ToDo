@model ToDo.Web.Mvc.Models.CreateItemModel;


@{
    ViewData["Title"] = "Editar item";
}



<div class="col-md-4">
    <form asp-action="Edit">
        <div class="form-group">
            <label asp-for="Done" class="control-label">Tarefa concluída?</label>
            <input asp-for="Done" type="checkbox" checked="@ViewBag.item.Done" />
        </div>
        <div class="form-group">
            <label class="control-label">Tarefa</label>
            <input class="form-control" disabled value="@ViewBag.item.Description" />
            <input asp-for="Id" class="form-control" hidden value="@ViewBag.item.Id" />
        </div>
        <div class="form-group">
            <input type="submit" value="Editar tarefa" action="Edit" class="btn btn-primary" />
        </div>
    </form>
</div>


<div>
    <a asp-action="Index">Voltar</a>
</div>
